{
  "manifest_version": 3,
  "name": "Strava Feed Filter (Chrome)",
  "description": "Filters the Strava feed and provides quick controls.",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.strava.com/*",
        "http://www.strava.com/*"
      ],
      "js": ["content/injected.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
